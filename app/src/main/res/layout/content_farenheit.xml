<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Farenheit"
    tools:showIn="@layout/activity_farenheit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="143dp">

        <TextView
            android:id="@+id/tx_farenheitMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Farenheit"
            android:textSize="40sp"/>

        <EditText
            android:id="@+id/et_farenheitInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/btn_convertFarenheit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ConvertFarenheit"
            android:text="Convert" />

        <TextView
            android:id="@+id/tx_celcius2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Celcius : "
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tx_farenheit2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Farenheit : " />

        <TextView
            android:id="@+id/tx_kelvin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Kelvin : " />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>